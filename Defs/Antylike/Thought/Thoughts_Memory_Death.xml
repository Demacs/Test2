<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!--=================== executions and prisoner deaths ===================-->

  <ThoughtDef ParentName="DeathMemory">
    <defName>KnowGuestExecuted_B</defName>
    <durationDays>6</durationDays>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>A just execution</label>
        <description>A convict died, convict is up for dinner!</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
      <li>
        <label>euthanasia</label>
        <!-- generic humane -->
        <description>Somebody was euthanized, not in the amidst of violence... We should have cut the stomach open and hung it on the wall at the very least!</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
      <li>
        <label>execution</label>
        <!-- generic brutal -->
        <description>There was an execution. We will have a new dinner menu.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
      <li>
        <label>organ harvesting</label>
        <!-- died because of organ harvesting -->
        <description>I harvested and killed someone! Will I be able to use what I harvested?</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef ParentName="DeathMemory">
    <defName>KnowColonistExecuted_B</defName>
    <durationDays>6</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Know Colonist Executed</label>
        <description>A convict died, convict is up for dinner!</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
      <li>
        <label>colonist euthanasia</label>
        <!-- generic humane, can't be worse than KnowColonistDied -->
        <description>Our comrade was euthanized, not in the amidst of violence... We should have cut the stomach open and hung it on the wall at the very least!</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
      <li>
        <label>colonist execution</label>
        <!-- generic brutal -->
        <description>A comrade was executed, despite the complete capability to stand on the battle field. Oh well, the hive wanted it.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
      <li>
        <label>colonist organ harvesting</label>
        <!-- died because of organ harvesting -->
        <description>I killed and harvested a comrade! If we use it, our comrade will be with us on the field, even in death!</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef ParentName="DeathMemory">
    <defName>KnowPrisonerDiedInnocent_B</defName>
    <durationDays>3</durationDays>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Innocent prisoner death</label>
        <description>An inncoent life was taken, I could have played with more!</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef ParentName="DeathMemory">
    <defName>KnowColonistDied_B</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>colonist died</label>
        <description>Our comrade died, and so will I. It's only the natural order.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef ParentName="DeathMemory">
    <defName>PawnWithGoodOpinionDied_B</defName>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Friend {0} died</label>
        <description>A friend died. I will be a bit loney, but death is inevitable.</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef ParentName="DeathMemory">
    <defName>PawnWithBadOpinionDied_B</defName>
    <durationDays>2</durationDays>
    <stackLimit>1</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <stages>
      <li>
        <label>Rival {0} died</label>
        <description>One who I often fought died! Death is a natural order, but who will fight me now?</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ObservedLayingCorpse_B</defName>
    <icon>Things/Mote/ThoughtSymbol/Skull</icon>
    <showBubble>true</showBubble>
    <thoughtClass>Thought_MemoryObservation</thoughtClass>
    <durationDays>2</durationDays>
    <!-- <stackedEffectMultiplier>1</stackedEffectMultiplier> -->
    <stackLimit>3</stackLimit>
    <stages>
      <li>
        <label>Observed Laying Corpse</label>
        <description>Corpse! The symbol of abundance!</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ObservedLayingRottingCorpse_B</defName>
    <icon>Things/Mote/ThoughtSymbol/Skull</icon>
    <showBubble>true</showBubble>
    <thoughtClass>Thought_MemoryObservation</thoughtClass>
    <durationDays>0.5</durationDays>
    <!-- <stackedEffectMultiplier>0.5</stackedEffectMultiplier> -->
    <stackLimit>5</stackLimit>
    <stages>
      <li>
        <label>Observed Laying Rotting Corpse</label>
        <description>The symbol of abundance rotted! What a waste!</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>KilledHumanlikeBloodlust_B</defName>
    <icon>Things/Mote/ThoughtSymbol/Skull</icon>
    <showBubble>true</showBubble>
    <durationDays>5</durationDays>
    <stackLimit>50</stackLimit>
    <stages>
      <li>
        <label>killed someone</label>
        <description>it was so much fun!</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
