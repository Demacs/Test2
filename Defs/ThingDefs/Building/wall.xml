<Defs>

  <ThingDef ParentName="BuildingBase" Name="AT_Wall">
    <defName>AT_Wall</defName>
    <label>Anti-impact wall</label>
    <description>An impassable structure, capable of supporting the roof. It distributes shock to the entire structure, allowing it to withstand strong impact such as explosions.\n\nHowever, it is not as effective against more focused force.\n\nIf you have SOS mod, you can use it as a hull.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/Linked/ATWall_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Linked/ATWall_MenuIcon</uiIconPath>
    <researchPrerequisites>
      <li>Largecolony</li>
    </researchPrerequisites>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>1200</WorkToBuild>
      <Flammability>0</Flammability>
      <MeditationFocusStrength>0.22</MeditationFocusStrength>
      <Cleanliness>0.25</Cleanliness>
      <Beauty>2</Beauty>
    </statBases>
    <costList>
      <Refleum>2</Refleum>
    </costList>
    <costStuffCount>6</costStuffCount>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    <designationCategory>Antybuilding</designationCategory>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <building>
      <isInert>true</isInert>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
	  <shipPart MayRequire="kentington.saveourship2">true</shipPart>
	  <paintable>true</paintable>
	  <supportsWallAttachments>true</supportsWallAttachments>
    </building>
    <comps>
		<li Class="CompProperties_MeditationFocus">
			<statDef>MeditationFocusStrength</statDef>
			<focusTypes>
				<li>Minimal</li>
			</focusTypes>
		</li>
		<li MayRequire="kentington.saveourship2" Class="SaveOurShip2.CompProps_ShipCachePart">
			<isHull>true</isHull>
			<hermetic>true</hermetic>
			<roof>true</roof>
		</li>
		<li Class="CompProperties_Power">
			<compClass>CompPowerTransmitter</compClass>
			<transmitsPower>true</transmitsPower>
		</li>
		<li MayRequire="kentington.saveourship2" Class="SaveOurShip2.CompProps_ShipHeat">
			<compClass>SaveOurShip2.CompShipHeat</compClass>
		</li>
		<li>
			<compClass>CompColorable</compClass>
		</li>
    </comps>
    <damageMultipliers>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>0.5</multiplier>
      </li>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>0.25</multiplier>
      </li>
      <li>
        <damageDef>BombSuper</damageDef>
        <multiplier>0.25</multiplier>
      </li>
	  <li>
        <damageDef>AT_AcidBullet</damageDef>
        <multiplier>0.2</multiplier>
      </li>
	  <li>
        <damageDef>AT_AcidBomb</damageDef>
        <multiplier>0.2</multiplier>
      </li>
	  <li>
        <damageDef>AT_AcidBomb_B</damageDef>
        <multiplier>0.2</multiplier>
      </li>
	  
	  <li MayRequire="kentington.saveourship2">
        <damageDef>BombACI</damageDef>
        <multiplier>0.25</multiplier>
      </li>
	  <li MayRequire="kentington.saveourship2">
        <damageDef>BombACII</damageDef>
        <multiplier>0.25</multiplier>
      </li>
	  <li MayRequire="kentington.saveourship2">
        <damageDef>BombACIII</damageDef>
        <multiplier>0.25</multiplier>
      </li>
	  <li MayRequire="kentington.saveourship2">
        <damageDef>ShipLaserSmall</damageDef>
        <multiplier>0.8</multiplier>
      </li>
	  <!-- <li MayRequire="kentington.saveourship2">
        <damageDef>ShipPlasmaSmall</damageDef>
        <multiplier>0.5</multiplier>
      </li> -->
	  <li MayRequire="kentington.saveourship2">
        <damageDef>BombKinetic</damageDef>
        <multiplier>0.1</multiplier>
      </li>
	  <li MayRequire="kentington.saveourship2">
        <damageDef>ShipLaserTwo</damageDef>
        <multiplier>0.8</multiplier>
      </li>
	  <!-- <li MayRequire="kentington.saveourship2">
        <damageDef>ShipPlasmaLarge</damageDef>
        <multiplier>0.5</multiplier>
      </li> -->
	  <li MayRequire="kentington.saveourship2">
        <damageDef>BombKineticLarge</damageDef>
        <multiplier>0.1</multiplier>
      </li>
	  
	  <li MayRequire="kentington.saveourship2">
        <damageDef>ShipTorpedoBomb</damageDef>
        <multiplier>0.01</multiplier>
      </li>
	  <li MayRequire="kentington.saveourship2">
        <damageDef>ShipTorpedoBombSuper</damageDef>
        <multiplier>0.01</multiplier>
      </li>
    </damageMultipliers>
    <designationHotKey>Misc3</designationHotKey>
	<placeWorkers>
			<li MayRequire="kentington.saveourship2">SaveOurShip2.PlaceWorker_ShipHull</li>
	</placeWorkers>
  </ThingDef>
  
