		<label>Continuous damage</label>
		
		<description>This is continuous damage that this weapon can inflict.</description>
		<formatString>{0}/5s</formatString>
		
		<category>Weapon_Ranged</category>
		<defaultBaseValue>0</defaultBaseValue>
		<minValue>0</minValue>
		<hideAtValue>0</hideAtValue>
		<maxValue>1000</maxValue>
		<toStringStyle>FloatOne</toStringStyle>
		<showIfUndefined>false</showIfUndefined>
		<displayPriorityInCategory>5499</displayPriorityInCategory>
	</StatDef>
	
	<StatDef ParentName="AT_Acid_damage">
		<defName>AT_Acid_damage_Melee</defName>
		<category>Weapon_Melee</category>
	</StatDef>
	
	<StatDef Name="AT_Acid_damage_duration">
		<defName>AT_Acid_damage_duration</defName>
		<label>Continuous damage duration</label>
		
		<description>This is continuous damage duration that this weapon can inflict.</description>
		<formatString>{0}s</formatString>
		
		<category>Weapon_Ranged</category>
		<defaultBaseValue>0</defaultBaseValue>
		<minValue>0</minValue>
		<hideAtValue>0</hideAtValue>
		<maxValue>1000</maxValue>
