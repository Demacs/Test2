	<StatDef Name="AT_pelletCount">
		<defName>AT_pelletCount</defName>
		<label>pellet Count</label>
		
		<description>This weapon fires multiple bullets at once.</description>
		
		<category>Weapon_Ranged</category>
		<defaultBaseValue>0</defaultBaseValue>
		<minValue>0</minValue>
		<hideAtValue>0</hideAtValue>
		<maxValue>1000</maxValue>
		<showIfUndefined>false</showIfUndefined>
		<displayPriorityInCategory>5500</displayPriorityInCategory>
	</StatDef>

	<StatDef Name="AT_Acid_damage">
