							</li>
							<li>
								<factionDef>AntyHive_B</factionDef>
								<pawnKinds>
									<li>AT_Sapper_A</li>
									<li>AT_Sapper_B</li>
									<li>AT_Rifle_B_title</li>
									<li>AT_Charge_B</li>
									<li>AT_Launcher_A_title</li>
									<li>AT_Power</li>
									<li>AT_Power_A</li>
									<li>AT_Power_A_B</li>
									<li>AT_Power_A_C</li>
									<li>AT_Power_B</li>
